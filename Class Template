#include <iostream>
#include <string>
using namespace std;

template <typename T>    
class Box 
{
private:
    T content;       
    
public:
    // Constructor - puts item in box
    Box(T item) {
        content = item;
    }
        void lookInside() {
        cout << "Box contains: " << content << endl;
    }
    };
int main() {
    cout << "=== UNIVERSAL BOX DEMO ===" << endl;
  
 Box<int> ageBox(25);
    ageBox.lookInside();
    
Box<double> priceBox(99.99);
    priceBox.lookInside();
    
Box<string> nameBox("Alice");
    nameBox.lookInside();
    
Box<char> gradeBox('A');
    gradeBox.lookInside();

