#include <iostream>
using namespace std;
int main() 
{
    try
    {
        int x=5;
        if(x<0)
        throw invalid_argument("negative value not allowed");
        cout<<"value:"<<x<<endl;
    }
    catch(const invalid_argument &e)
    {
        cout<<"caught exception:"<<e.what()<<endl;
    }
    catch(const exception &e)
    {
        cout<<"General exception:"<<e.what()<<endl;
    }
        return 0;
    }
    
