#include <iostream>
#include <map>
using namespace std;

int main() {
    // Creating and initializing a map
    map<string, int> fruitPrices = {
        {"Apple", 100},
        {"Banana", 40},
        {"Mango", 70}
    };

    // Accessing elements using iterator
    cout << "Fruit Prices:\n";
    for (map<string, int>::iterator it = fruitPrices.begin(); it != fruitPrices.end(); ++it) {
        cout << it->first << " costs " << it->second << " rupees.\n";
    }

    return 0;
