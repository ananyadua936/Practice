#include <iostream>
using namespace std;

int main() {
    try {
        int choice;
        cout << "Enter your choice: ";
        cin >> choice;

        if (choice == 1)
            throw 100;         // integer
        else if (choice == 2)
            throw 'A';         // char
        else if (choice == 3)
            throw 3.14;        // double
        else {
            cout << "No exception thrown!" << endl;
        }
    }
    catch (int e) {
        cout << "Caught an integer exception: " << e << endl;
    }
    catch (char e) {
        cout << "Caught a character exception: " << e << endl;
    }
    catch (double e) {
        cout << "Caught a double (float) exception: " << e << endl;
    }
    catch (...) {
        cout << "Caught some other exception" << endl;
    }

    return 0;
}
