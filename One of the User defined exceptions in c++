#include <iostream>
using namespace std;
class Invalid Age {
public:
    string message; 
    Invalid Age(string msg) {    
        message = msg;}
};
int main() {
  int age;
    cout << "Enter your age: ";
  cin >> age;
 try {
 if (age < 18) {
            throw Invalid Age("Age must be 18 or above to vote!"); }
        cout << "You are eligible to vote." <<endl; }
    catch (Invalid Age e) {
        cout << "Exception caught: " << e.message << endl; }
  return 0;
