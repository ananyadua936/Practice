#include <iostream>
using namespace std;
class base
{
    public:
     virtual void show()
    {
        cout<<"This is base class";
    }
};
class derive:public base
{
    public:
    void show()
    {
        cout<<"This is derive class";
    }
};
int main()
{
    base*p;
    derive d;
    p=&d;
    p-> show();
    return 0;
}


